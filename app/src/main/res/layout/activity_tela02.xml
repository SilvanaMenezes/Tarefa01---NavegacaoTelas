<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bodyPagina02"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F88484"
    tools:context=".Tela02">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-black"
        android:text="Tela 02"
        android:textSize="48sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btVoltarTela01"
        android:layout_width="110dp"
        android:layout_height="48dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="642dp"
        android:layout_marginBottom="40dp"
        android:backgroundTint="#5E5C5C"
        android:onClick="voltarTela01"
        android:text="voltar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btAvancarTela03"
        android:layout_width="110dp"
        android:layout_height="48dp"
        android:layout_marginTop="642dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="40dp"
        android:backgroundTint="#631C1C"
        android:onClick="avancarTela03"
        android:text="avancar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btMudarBodyVermelho"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="40dp"
        android:backgroundTint="#FF0000"
        android:onClick="mudarBody"
        android:text="vermelho"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btMudarBodyVerde"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="20dp"
        android:backgroundTint="#00FF00"
        android:onClick="mudarBody"
        android:text="verde"
        app:layout_constraintEnd_toStartOf="@+id/btMudarBodyAzul"
        app:layout_constraintStart_toEndOf="@+id/btMudarBodyVermelho"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btMudarBodyAzul"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="15dp"
        android:backgroundTint="#0000FF"
        android:onClick="mudarBody"
        android:text="azul"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btMudarBodyVerde"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btMudarBodyAleatorio"
        android:layout_width="156dp"
        android:layout_height="49dp"
        android:layout_marginStart="125dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="130dp"
        android:backgroundTint="#E91E63"
        android:onClick="mudarBodyAleatorio"
        android:text="aleatorio"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btMudarBodyVerde" />

</androidx.constraintlayout.widget.ConstraintLayout>